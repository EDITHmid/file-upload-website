<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>MG Gang Forever - Subjects</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <h1 class="main-title">MG Gang Forever</h1>
  <div class="subjects-container">
    <% const subjects = ['Math', 'Science', 'History', 'Physics', 'Chemistry', 'Biology', 'English', 'Computer']; %>
    <% subjects.forEach(subject => { %>
      <div class="subject-card">
        <h2><%= subject %></h2>
        <a href="/upload/<%= subject %>" class="button">Upload Files</a>
        <a href="/download/<%= subject %>" class="button">Download Files</a>
      </div>
    <% }); %>
  </div>
  <script src="/script.js"></script>
</body>
</html>
